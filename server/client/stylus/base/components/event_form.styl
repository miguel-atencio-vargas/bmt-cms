.c-form
	font-size: $text-size.normal-2
	color: #3c3c3c
	padding: 0 2rem
	line-height: 4rem

.c-form__group
	margin: 0 0 2rem
	& button
		width: 100%
	@media only screen and (min-width: $breakpoints['m'] + 1)
		margin:  0 2.5rem 2rem
		display: flex
		justify-content: space-between
		flex-wrap: wrap

.campo-col
	@media only screen and (min-width: $breakpoints['m'] + 1)
		width: 50%
		&:nth-child(2n-1)
			padding-right: 3rem
	& > *
		width: 100%
		height: 100%
		border-radius: 5px

.c-form__group-solo
	& textarea
		width: 100%
		padding: 1.3rem
		height: 25rem
		border-radius: 5px
		resize: none
.c-list-errors
	padding: 0 4rem
	& li
		margin-bottom: 2rem
		& p
			color: $base-color-light
			font-size: $text-size.normal-2
			display: inline
			padding-left: 1rem
		& span
			color: #FF4747
			vertical-align: middle
